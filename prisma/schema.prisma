// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id
  email     String    @unique
  name      String
  image_url  String?
  last_login DateTime?
  consiliari_clicked Boolean  @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  resumes   Resume[]

  @@map("users")
}

model Resume {
  id                   String    @id @default(cuid())
  user_id              String?
  expires_at           DateTime?
  resume_text          String
  resume_fileUrl       String?
  resume_analysis      Json
  resume_analysis_score Json?
  resume_json          Json?
  optimized_resumeUrl  String?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  user                 User?     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  jobs                 Job[]

  @@index([user_id])
  @@index([expires_at])
  @@map("resumes")
}

model Job {
  id                       String          @id @default(cuid())
  resume_id                String
  job_url                  String?
  job_title                String?
  job_description          String
  job_gap_analysis         Json
  job_analysis_score       Json?
  optimized_resumeUrl      String?
  optimized_resume_json    Json?
  cover_letterUrl          String?
  createdAt                DateTime        @default(now())
  updatedAt                DateTime        @updatedAt
  resume                   Resume          @relation(fields: [resume_id], references: [id], onDelete: Cascade)
  suggestions              JobSuggestion[]
  @@map("jobs")
}

model JobSuggestion {
  id                      String   @id @default(cuid())
  job_id                  String
  suggestions             Json
  accepted_suggestion_ids Json?
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  job                     Job      @relation(fields: [job_id], references: [id], onDelete: Cascade)

  @@map("job_suggestions")
}

model Admin {
  id            String   @id @default(cuid())
  email         String   @unique
  password_hash String
  name          String

  is_active     Boolean  @default(true) 

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("admins")
}

model AppAnalytics {
  id                          Int      @id @default(1)
  totalAppVisits              Int      @default(0)
  totalGuestResumeAnalysis    Int      @default(0)
  fixAtsOrCustomizedClicked   Int      @default(0)
  signupButtonClicked         Int      @default(0)

  updatedAt                   DateTime @updatedAt
}